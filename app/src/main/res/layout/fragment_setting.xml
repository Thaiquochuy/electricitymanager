<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Switch
        android:id="@+id/switch_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Address"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch_show_used_num_electric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Used Number of Electric"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch_show_elec_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Electric User Type"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch_show_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Price"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</LinearLayout>
